              </div>
              
              <%
				int subtotal = 0, tax = 0, total = 0;
				List list1 = (List)session.getAttribute("list");
				List list2 = (List)session.getAttribute("list2");
				List list3 = (List)session.getAttribute("list3");
				
				Iterator it1 = list1.iterator();
				Iterator it3 = list3.iterator();
			  	Iterator it2 = list2.iterator();
			
			%>
              <div class="col-md-4">
                <div class="checkout-right">
                  <h4>Order Summary</h4>
                  <div class="aa-order-summary-area">
                    <table class="table table-responsive">
                      <thead>
                        <tr>
                          <th>Product</th>
                          <th>Total</th>
                        </tr>
                      </thead>
                      <tbody>
                      	<% 
	                      	while(it1.hasNext() && it2.hasNext() && it3.hasNext()){
			      			  		Item itm = (Item)it2.next();
			    			  		Cart crt = (Cart)it3.next();
			    			  		subtotal += Integer.parseInt(itm.getItemprice());
			    			  		tax += Integer.parseInt(itm.getItemprice()) * 5/100;
			    			  		
    			  		%>
                        <tr>
                          <td><%= itm.getItemname() %> <strong> x  <%= crt.getQuantity() %></strong></td>
                          <td><%= itm.getItemprice() %></td>
                        </tr>
                        <% } %>
                      </tbody>
                      <tfoot>
                        <tr>
                          <th>Subtotal</th>
                          <td>Rs.<%= subtotal %></td>
                        </tr>
                         <tr>
                          <th>Tax</th>
                          <td>Rs.<%= tax %></td>
                        </tr>
                         <tr>
                         	<% total = tax + subtotal; %>
                          <th>Total</th>
                          <td>Rs.<%= total %></td>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                  <% 
                  	session.setAttribute("subtotal", subtotal); 
			      	session.setAttribute("tax", tax); 
			      	session.setAttribute("total", total); 
	               
	               %>
                  <h4>Payment Method</h4>
                  <div class="aa-payment-method">                    
                    <label for="cashdelivery">
                    	<input type="radio" id="cashdelivery" name="methodpay"> Cash on Delivery </label>
                   		<label for="paypal">
                    	<input type="radio" id="paypal" name="methodpay"" checked> Pick Up </label> 
                    <input type="submit" value="Place Order" class="aa-browse-btn">                
                  </div>
                </div>
              </div>
              
            </div>
          </form>
         </div>
       </div>
     </div>
   </div>
 </section>
